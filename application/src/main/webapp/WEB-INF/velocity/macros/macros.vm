#macro(navigation $items)
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Music for all</a>
            </div>

            <div id="navbar" class="navbar-right navbar-collapse collapse ">
                <ul class="nav navbar-nav">
                    #foreach($item in $items)
                        #navigationItem($item)
                    #end
                </ul>
            </div>
        </div>
    </nav>
#end

#macro(navigationItem $item)
    #set($isActive = false)
    #set($isActive = $item.isActive)

    <li #if($isActive) class="active" #end>
        <a href="$item.url">
            <i class="fa"></i> $item.title
        </a>
    </li>
#end

#macro(body )
    <body>
        $!bodyContent##
    </body>
#end

#macro(footer)
    <footer class="container-fluid">
        <p>Music for all Â©</p>
    </footer>
#end

#macro(form $action $method)
    <form action= #springUrl($action) method=$method>
        <input type="hidden" name="$!{_csrf.parameterName}" value="$!{_csrf.token}"/>
        $!bodyContent##
    </form>
#end

#macro(logoutForm)
    #@form('/logout',"post")
        <input type="submit" value="Log out" class="btn btn-default"/>
    #end
#end