            </ul>

        </div>

    </div>
</div>
<script language="javascript">

    $('#playlists a').on('click', function(e) {
        e.preventDefault();
        $("#playlists li").removeClass("active");
        $(this).closest('li').addClass('active');
        alert($(this).data('value'));
    });

</script>
