<!DOCTYPE html>
<html lang="en">
<head>
    <title>js entities</title>
    <link rel="stylesheet"
          href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="//code.jquery.com/jquery-2.2.4.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="resources/js/playlist.js"></script>
    <script src="resources/js/track.js"></script>
    <meta name="_csrf" content="${_csrf.token}"/>
    <meta name="_csrf_header" content="${_csrf.headerName}"/>
</head>
<body>
<div id="create" class="btn btn-large btn-default">Create</div>
<div id="get" class="btn btn-large btn-default">Get</div>
<div id="delete" class="btn btn-large btn-default">Delete</div>
<div id="all" class="btn btn-large btn-default">All</div>

<script>
    var header = $("meta[name='_csrf_header']").attr("content");
    var token = $("meta[name='_csrf']").attr("content");
    var playlist = new Playlist();
    var track = new Track();

    $.ajaxSetup({
        beforeSend: function (xhr) {
            xhr.setRequestHeader(header, token);
        }
    });

    $("#create").on('click', function (event) {
        playlist.create("Best")
                .then(function (response) {
                    console.log("Playlist with id = %d was created", response.id);
                });
        track.create("Best")
                .then(function (response) {
                    console.log("Track with id = %d was created", response.id);
                });
    });
    $("#get").on('click', function (event) {
        playlist.get(2)
                .then(function (response) {
                    console.log("Playlist with id = %d was requested", response.id);
                    $.each(response.tracks, function () {
                        console.log("Get song with name %s and location %s", this.name, this.location);
                    });
                });
        track.get(2)
                .then(function (response) {
                    console.log("Track with id = %d was requested", response.id);
                    $.each(response.tags, function () {
                        console.log("Get tag with name %s", this.name);
                    });
                });
    });
    $("#delete").on('click', function (event) {
        playlist.remove(1)
                .then(function (response) {
                    console.log("Response status %s", response);
                });
        track.remove(1)
                .then(function (response) {
                    console.log("Response status %s", response);
                });
    });
    $("#all").on('click', function (event) {
        playlist.all()
                .then(function (response) {
                    $.each(response, function () {
                        console.log("Get playlist with name %s", this.name);
                    });
                });
        track.all()
                .then(function (response) {
                    $.each(response, function () {
                        console.log("Get track with name %s", this.name);
                    });
                });
    });

</script>
</body>
</html>